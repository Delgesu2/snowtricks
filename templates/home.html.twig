{% extends 'base.html.twig' %}

{% block title %}Snowtricks{% endblock %}

{%  block body %}

    <figure class="image is-2by1">
        <img src="/images/cover_snow.jpg" alt="snowboard jump photo" title="Snowboard jump">
    </figure>

    <section class="hero">
        <div class="hero-body">
            <div class="container has-text-centered">
                <h1 class="title">
                    Neige
                    Passion
                    Partage
                </h1>
                <h2 class="subtitle">
                    Rejoins la plus grande communaut√© d'adeptes du snowboard !
                </h2>
                <span class="icon">
                            <i class="far fa-snowflake" aria-hidden="true"></i>
                </span>
                <span class="icon">
                            <i class="far fa-snowflake" aria-hidden="true"></i>
                </span>
                <span class="icon">
                            <i class="far fa-snowflake" aria-hidden="true"></i>
                </span>
            </div>
        </div>
    </section>

    <div class="container" id="container">

        {%  for row in photos|batch(6) %}

        <div class="tile is-ancestor" id="row">

            {% for photo in row %}

                <div class="tile is-parent is-2">
                    <div class="tile is-child box">
                        <figure class="image is-128x128">
                            <img src="{{ asset(photo.path) }}" alt="{{ photo.alt }}"
                            title="{{ photo.title }}">
                        </figure>
                        <p>{{ photo.title}}</p>
                        <a href="/del">
                                <span class="icon">
                                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                                </span>
                        </a>
                        <a href="/update">
                                <span class="icon">
                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                </span>
                        </a>
                    </div>
                </div>

            {% endfor %}

        </div>

        {% else %}

            <section class="hero">
                <div class="hero-body">
                    <div class="container has-text-centered">
                        <h1 class="title">
                            Pas de trick
                        </h1>
                    </div>
                </div>
            </section>

        {% endfor %}

    </div>

        <div class="columns is-mobile">
            <div class="column is-2 is-offset-half">
                <button class="button" id="load-more-tricks">
                    Charger plus
                </button>
            </div>
        </div>

{% endblock %}