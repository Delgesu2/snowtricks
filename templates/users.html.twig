{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Gestion des utilisateurs{% endblock %}

{%  block body %}

<div class="columns is-mobile">
    <div class="column is-10 is-offset-1">

        <div class="hero is-info">
            <div class="hero-body">
                <div class="container has-text-centered">
                    <h1 class="title">
                        Liste des utilisateurs enregistr√©s
                    </h1>
                </div>
            </div>
        </div>

    <section>
        <div class="content">
            <table>

                <tr>
                    <th>Nom</th><th>Pseudo</th><th>Courriel</th><th>Supprimer</th>
                </tr>

        {% for user in users %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.nick }}</td>
                    <td>{{ user.email }}</td>
                         {# user.role #}
                    <td>
                        <a href="{{ path('del_user', {'slug':user.slug}) }}">
                                <span class="icon">
                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                </span>
                        </a>
                    </td>
                </tr>

        {% endfor %}

            </table>
        </div>
    </section>
    </div>
</div>

{% endblock %}
