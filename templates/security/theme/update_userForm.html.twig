{% form_theme form _self %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block form %}
    {{ form_start(form) }}

    <div class="columns is-mobile">
        <div class="column is-10     is-offset-1">

            <div class="hero is-info">
                <div class="hero-body">
                    <div class="container has-text-centered">
                        <h1 class="title">
                            Edition du profile
                        </h1>
                    </div>
                </div>
            </div>

            <section>  <!-- Name -->
                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        {{ form_label(form.name, 'Nom') }}
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                {{ form_widget(form.name, {'attr': {'class': 'input'}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Nickname -->
                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        {{ form_label(form.nick, 'Pseudo') }}
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                {{ form_widget(form.nick, {'attr': {'class': 'input'}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Password -->
                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        {{ form_label(form.password, 'Mot de passe')  }}
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                {{ form_widget(form.password, {'attr': {'class': 'input'}}) }}
                            </div>
                            <p class="help is-warning">Le mot de passe doit se composer d'au moins 8 caract√®res, dont
                                au minimum 1 lettre majuscule, 1 chiffre, et ne comporter aucun espace.</p>
                        </div>
                    </div>
                </div>


                <!-- E-mail -->
                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        {{ form_label(form.email, 'Courriel') }}
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                {{ form_widget(form.email, {'attr': {'class': 'input'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section>     <!-- Load profile picture -->
                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        {{ form_label(form.photo, 'Photo') }}
                    </div>
                    <div class="field-body">
                        <div class="control">
                            <div class="file">
                                <label class="file-label" oninput="showFileUpdating()">
                                {{ form_widget(form.photo) }}
                                    <span class="file-cta">
                                                  <span class="file-icon">
                                                    <i class="fas fa-upload"></i>
                                                  </span>
                                                  <span class="file-label">
                                                    Choisir un fichier
                                                  </span>
                                                </span>
                                </label>
                            </div>
                            <div>Ancienne photo: </div>
                                <!--{# <img src="{{ asset(user.photo.path) }}">  #}-->
                            <div>Nouvelle photo: <output id="loadedFile"></output></div>
                        </div>
                    </div>
                </div>
            </section>

            <button type="submit">Soumettre</button>

        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}