<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
  <entity name="App\Entity\Trick"  table="snowtricks_trick">
    <id name="id" column="id" type="uuid">
        <generator strategy="CUSTOM" />
        <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
    </id>
    <field name="trick_name" type="string" length="60" nullable="false" unique="true" />
    <field name="description" type="string" length="800"/>

    <many-to-one field="trick_group" target-entity="App\Entity\Group" inversed-by="trick">
        <cascade>
            <cascade-persist />
        </cascade>
    </many-to-one>

      <one-to-many field="comment" target-entity="App\Entity\Comment" mapped-by="trick" >
          <cascade>
              <cascade-persist />
          </cascade>
      </one-to-many>

    <one-to-many field="photo" target-entity="App\Entity\Photo" mapped-by="trick_photo">
        <cascade>
            <cascade-all />
        </cascade>
    </one-to-many>

    <one-to-many field="video" target-entity="App\Entity\Video" mapped-by="trick_video">
        <cascade>
            <cascade-all />
        </cascade>
    </one-to-many>

    <many-to-one field="trick_user" target-entity="App\Entity\User" inversed-by="trick">
    </many-to-one>

    <field name="datecreate" type="integer" />
    <field name="dateupdate" type="integer" nullable="true" />
  </entity>
</doctrine-mapping>